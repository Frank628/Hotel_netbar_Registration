<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/improtant_people_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/improtant_people_tv_bg"
            android:padding="10dp"
            android:text="开始时间:"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_starttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/icon_down"
            android:gravity="center"
            android:padding="10dp"
            android:text="请选择"
            android:textColor="@color/title2"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/improtant_people_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/improtant_people_tv_bg"
            android:padding="10dp"
            android:text="结束时间:"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_endtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/icon_down"
            android:gravity="center"
            android:padding="10dp"
            android:text="请选择"
            android:textColor="@color/title2"
            android:textSize="18sp" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_green_click"
        android:drawableLeft="@drawable/icon_search"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="查  询"/>

    <TextView
        android:id="@+id/tv_pcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250dp"
        android:layout_gravity="center_horizontal"
        android:textSize="19sp"
        android:drawableLeft="@drawable/icon_pcount"
        android:drawablePadding="10dp"
        android:textColor="@color/title1"
        android:layout_marginTop="50dp"
        android:text="人次：0"/>

    <TextView
        android:id="@+id/tv_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250dp"
        android:layout_gravity="center_horizontal"
        android:textSize="19sp"
        android:drawableLeft="@drawable/icon_cash"
        android:drawablePadding="10dp"
        android:textColor="@color/title1"
        android:layout_marginTop="50dp"
        android:text="总收入：0"/>
</LinearLayout>