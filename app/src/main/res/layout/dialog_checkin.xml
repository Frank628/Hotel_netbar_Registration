<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="@color/title1"
        android:textSize="19sp"
        android:text="@string/regist_title_value"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.jinchao.registration.widget.IDCardView
            android:id="@+id/idcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/tv_facematch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_orange_click"
            android:text="人脸比对"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_alignRight="@+id/idcard"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:drawableLeft="@drawable/icon_facematch"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/improtant_people_bg"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/improtant_people_tv_bg"
            android:text="联系电话:"/>
        <com.jinchao.registration.widget.ValidateEidtText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="18sp"
            android:hint="请输入联系方式"
            android:textColorHint="@color/title3"
            android:background="@null"
            android:gravity="center"
            android:inputType="text"
            android:singleLine="true"
            android:maxLength="18"
            android:drawablePadding="5dp"
            app:vd_textErrorColor="@color/red"
            app:vd_textRightColor="@color/title1"
            app:vd_drawable_right_right="@drawable/icon_gou"
            app:vd_drawable_right_error="@drawable/icon_gantan"
            app:vd_validate_type="mobile"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:padding="5dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:background="@drawable/btn_orange_click"
        android:text="登记/添加"/>
</LinearLayout>